pkg=usbredir
ver=0.7
rel=1
sum="USB traffic redirection protocol"
lic="BSD, LGPL2.1"
url=http://spice-space.org/page/UsbRedir
src=(https://www.spice-space.org/download/$pkg/$pkg-$ver.tar.bz2)
sha=(0a63a0712b5dc62be9cca44f97270fea5d1ec1fe7dde0c11dc74a01c8e2006aa)

build() {
    ./configure --prefix=/usr \
                --sbindir=/usr/bin
    make
}

package() {
    make DESTDIR=$pkgdir install
}
