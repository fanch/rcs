pkg=ffmpeg
ver=3.3
rel=1
sum="Complete solution to record, convert and stream audio and video"
lic=GPL3
url=http://ffmpeg.org
dep=(alsa-lib bzip2 fontconfig gnutls pulseaudio lame libass libbluray libtheora libvorbis libva libwebp libvdpau libvpx opus openjpeg zlib x264 x265 flac)
mkd=(yasm)
src=(http://ffmpeg.org/releases/ffmpeg-$ver.tar.xz)
sha=(599e7f7c017221c22011c4037b88bdcd1c47cd40c1e466838bc3c465f3e9569d)

build() {
    ./configure --prefix=/usr \
                --pkg-config-flags="--static" \
                --disable-debug \
                --disable-static \
                --disable-stripping \
                --enable-avresample \
                --enable-fontconfig \
                --enable-gnutls \
                --enable-gpl \
                --enable-libass \
                --enable-libbluray \
                --enable-libfreetype \
                --enable-libfribidi \
                --enable-libmp3lame \
                --enable-libopus \
                --enable-libpulse \
                --enable-libtheora \
                --enable-libvorbis \
                --enable-libvpx \
                --enable-libwebp \
                --enable-libx264 \
                --enable-libx265 \
                --enable-shared \
                --enable-version3
    make
    make tools/qt-faststart
    make doc/ff{mpeg,play,server}.1
}

package() {
    make DESTDIR=$pkgdir install install-man
    install -Dm755 tools/qt-faststart $pkgdir/usr/bin
}
