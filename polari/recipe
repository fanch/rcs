pkg=polari
ver=3.22.1
rel=1
sum="A text editor for GNOME"
lic=GPL
url=https://wiki.gnome.org/Apps/Polari
grp=gnome-extra
dep=(gjs gtk3 telepathy-glib telepathy-idle telepathy-mission-control telepathy-logger)
mkd=(gobject-introspection intltool)
src=(https://download.gnome.org/sources/$pkg/${ver:0:4}/$pkg-$ver.tar.xz)
sha=(571b97109b1a7f1c64c96fbfe19f015e04f7fe08caa4f04eef8e9ed4fb3c8f74)

build() {
    ./configure --prefix=/usr
    make
}

package() {
    make DESTDIR=$pkgdir install
}
