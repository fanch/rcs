pkg=dconf-editor
ver=3.22.0
rel=1
sum="dconf Editor"
lic=LGPL2.1
url=http://live.gnome.org/dconf
grp=gnome
dep=(gtk3 dconf)
mkd=(vala intltool)
src=(https://download.gnome.org/sources/$pkg/${ver:0:4}/$pkg-$ver.tar.xz)
sha=(4ca3c2c3836f4c944f161540d1521507dab8e7bee0cac7d543560808efb9246f)

build() {
    ./configure --prefix=/usr
    make
}

package() {
    make DESTDIR=$pkgdir install
}
