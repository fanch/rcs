pkg=iproute2
ver=4.8.0
rel=1
sum="IP Routing Utilities"
lic=GPL2
url=http://www.linuxfoundation.org/collaborate/workgroups/networking/iproute2
grp=base
dep=(db iptables)
bak=(/etc/iproute2/ematch_map
   /etc/iproute2/rt_dsfield
   /etc/iproute2/rt_protos
   /etc/iproute2/rt_realms
   /etc/iproute2/rt_scopes
   /etc/iproute2/rt_tables)
opt=(!makeflags)
src=(http://www.kernel.org/pub/linux/utils/net/$pkg/$pkg-$ver.tar.xz)
sha=(a30959c8421bc8ef42719bed41d14e1d7cfdbad80d7d70c5c42ad31f2c2cb389)

build() {
    # set correct fhs structure
    patch -Np1 -i $rcsdir/0001-make-iproute2-fhs-compliant.patch

    # do not treat warnings as errors
    sed -i 's/-Werror//' Makefile

    ./configure --prefix=/usr
    make
}

package() {
    make DESTDIR=$pkgdir install

    install -Dm644 include/libnetlink.h $pkgdir/usr/include/libnetlink.h
    install -Dm644 lib/libnetlink.a $pkgdir/usr/lib/libnetlink.a

    rm $pkgdir/usr/share/doc/iproute2/*.{sgml,tex}
    install doc/*.html doc/*.pdf $pkgdir/usr/share/doc/iproute2/

    mv $pkgdir/sbin $pkgdir/usr/bin
}
