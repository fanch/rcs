pkg=gdm
ver=3.22.2
rel=1
sum="Gnome Display Manager"
lic=GPL
url=http://www.gnome.org
grp=gnome
dep=(gnome-session gnome-shell upower xwayland)
mkd=(gobject-introspection intltool itstool)
bak=(/etc/pam.d/gdm-autologin
   /etc/pam.d/gdm-fingerprint
   /etc/pam.d/gdm-launch-environment
   /etc/pam.d/gdm-password
   /etc/pam.d/gdm-smartcard
   /etc/gdm/custom.conf
   /etc/gdm/Xsession
   /etc/gdm/PostSession/Default
   /etc/gdm/PreSession/Default)
src=(https://download.gnome.org/sources/$pkg/${ver:0:4}/$pkg-$ver.tar.xz)
sha=(ed5c5566c7be69b2b5442c96d5f225d921e480723d3649d6b4b19bad96d8adb8)

build() {
    ./configure --prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --sbindir=/usr/bin \
                --disable-static \
                --disable-schemas-compile \
                --enable-gdm-xsession \
                --enable-ipv6 \
                --without-tcp-wrappers \
                --without-plymouth \
                --with-default-pam-config=arch
    make
}

package() {
    make DESTDIR=$pkgdir install

    chmod 711 $pkgdir/var/log/gdm
    rm -r $pkgdir/var/run
}
