pkg=libepoxy
ver=1.4.0
rel=1
sum="Library handling OpenGL function pointer managementrm "
lic=MIT
url=https://github.com/anholt/libepoxy
dep=(mesa)
mkd=(util-macros)
src=(https://github.com/anholt/$pkg/releases/download/v${ver%.0}/$pkg-$ver.tar.xz)
sha=(25a906b14a921bc2b488cfeaa21a00486fe92630e4a9dd346e4ecabeae52ab41)

build() {
    ./configure --prefix=/usr
    make
}

package() {
    make DESTDIR=$pkgdir install
}
