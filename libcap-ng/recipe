pkg=libcap-ng
ver=0.7.8
rel=1
sum="A library making programming with POSIX capabilities easier than traditional libcap"
lic="GPL2, LGPL2.1"
url=http://people.redhat.com/sgrubb/libcap-ng
src=(http://people.redhat.com/sgrubb/libcap-ng/libcap-ng-$ver.tar.gz)
sha=(c21af997445cd4107a55d386f955c5ea6f6e96ead693e9151277c0ab5f97d05f)

build() {
    ./configure --prefix=/usr \
                --enable-static=no \
                --with-python=no
    make
}

package() {
    make DESTDIR=$pkgdir install
}
