pkg=modemmanager
ver=1.5.993
rel=1
sum="Mobile broadband modem management service"
lic="GPL2, LGPL2.1"
url=http://www.freedesktop.org/wiki/Software/ModemManager
dep=(libmbim libqmi polkit ppp systemd libgudev)
mkd=(gobject-introspection intltool gtk-doc vala)
opt=(!emptydirs)
src=(http://www.freedesktop.org/software/ModemManager/ModemManager-$ver.tar.xz)
sha=(4a23e1e7dbaac422e37f055a81d5cc60c87757eff839e047a09e2455bac22a3b)

build() {
    ./configure --prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static \
                --sbindir=/usr/bin \
                --with-dbus-sys-dir=/usr/share/dbus-1/system.d \
                --with-udev-base-dir=/usr/lib/udev \
                --with-polkit=permissive \
                --with-suspend-resume=systemd \
                --enable-gtk-doc
    make
}

package() {
    make DESTDIR=$pkgdir install
}
