pkg=hwids
ver=20180917
rel=1
sum="hardware identification databases"
lic=GPL2
url=https://github.com/gentoo/hwids
src=()
sha=()

package() {
git clone git://github.com/gentoo/hwids.git hwids
cd hwids
  for ids in pci.ids usb.ids; do
    install -Dm644 "$ids" "${pkgdir}/usr/share/hwdata/${ids}"
  done
}
