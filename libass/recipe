pkg=libass
ver=0.13.3
rel=1
sum="A portable library for SSA/ASS subtitles rendering"
lic=BSD
url=https://github.com/libass/libass
dep=(fribidi fontconfig)
mkd=(yasm)
src=(https://github.com/$pkg/$pkg/releases/download/$ver/$pkg-$ver.tar.xz)
sha=(a641b653d7c9f2f3b9d6a5e5a906a004ac3e110487ad485d9dd029e944bb3f6d)

build() {
    ./configure --prefix=/usr \
                --enable-harfbuzz \
                --enable-fontconfig
    make
}

package() {
    make DESTDIR=$pkgdir install
}
