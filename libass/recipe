pkg=libass
ver=0.13.4
rel=1
sum="A portable library for SSA/ASS subtitles rendering"
lic=BSD
url=https://github.com/libass/libass
dep=(fribidi fontconfig)
mkd=(yasm)
src=(https://github.com/$pkg/$pkg/releases/download/$ver/$pkg-$ver.tar.xz)
sha=(d84a2fc89011b99d87fc47af91906622707c165d1860e9f774825ebbbc9c9fb6)

build() {
    ./configure --prefix=/usr \
                --enable-harfbuzz \
                --enable-fontconfig
    make
}

package() {
    make DESTDIR=$pkgdir install
}
