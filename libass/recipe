pkg=libass
ver=0.13.6
rel=1
sum="A portable library for SSA/ASS subtitles rendering"
lic=BSD
url=https://github.com/libass/libass
dep=(fribidi fontconfig)
mkd=(yasm)
src=(https://github.com/$pkg/$pkg/releases/download/$ver/$pkg-$ver.tar.xz)
sha=(f8a874d104e3e72e2cc057e5a1710c650b10367486845a26e5ff28ed7a912c2d)

build() {
    ./configure --prefix=/usr \
                --enable-harfbuzz \
                --enable-fontconfig
    make
}

package() {
    make DESTDIR=$pkgdir install
}
