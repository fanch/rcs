pkg=gnome-online-accounts
ver=3.22.0
rel=1
sum="GNOME service to access online accounts"
lic=GPL
sum=http://www.gnome.org
dep=(gcr json-glib krb5 libnotify libsecret rest telepathy-glib webkitgtk)
mkd=(docbook-xsl gobject-introspection intltool libxslt vala)
src=(https://download.gnome.org/sources/$pkg/${ver:0:4}/$pkg-$ver.tar.xz)
sha=(aacce93a71bf5e687a45ae0d00f31ea0625ddd8143235d6d8c64c4ec21bbfa33)

build() {
    ./configure --prefix=/usr \
                --disable-static \
                --enable-gtk-doc \
                --enable-exchange \
                --enable-facebook \
                --enable-flickr \
                --enable-foursquare \
                --enable-google \
                --enable-imap-smtp \
                --enable-kerberos \
                --enable-owncloud \
                --enable-pocket \
                --enable-telepathy \
                --enable-windows-live \
                --enable-lastfm
    make
}

package() {
    make DESTDIR=$pkgdir install
}
