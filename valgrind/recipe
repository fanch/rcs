pkg=valgrind
ver=3.12.0
rel=1
sum="A tool to help find memory-management problems in programs"
lic=GPL
url=http://valgrind.org
dep=(perl)
mkd=(gdb openmpi)
opt=(!emptydirs !buildflags)
src=(http://valgrind.org/downloads/valgrind-$ver.tar.bz2)
sha=(67ca4395b2527247780f36148b084f5743a68ab0c850cb43e4a5b4b012cf76a1)

build() {
    ./configure --prefix=/usr \
                --mandir=/usr/share/man \
                --with-mpicc=mpicc
    make
}

package() {
    make DESTDIR=$pkgdir install
}
