pkg=libbsd
ver=0.8.3
rel=1
sum="Provides useful functions commonly found on BSD systems like strlcpy()"
lic=custom
url=http://libbsd.freedesktop.org
src=(http://libbsd.freedesktop.org/releases/$pkg-$ver.tar.xz)
sha=(934b634f4dfd865b6482650b8f522c70ae65c463529de8be907b53c89c3a34a8)

build() {
    ./configure --prefix=/usr
    make
}

package() {
    make DESTDIR=$pkgdir install

    rm $pkgdir/usr/lib/libbsd.a
    install -D -m644 COPYING $pkgdir/usr/share/licenses/$pkg/LICENSE
}
