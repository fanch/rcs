pkg=weston
ver=3.0.0
rel=1
sum="Reference implementation of a Wayland compositor"
lic=MIT
url=http://wayland.freedesktop.org
dep=(wayland libinput libxcursor libxkbcommon mtdev poppler glu pango colord)
mkd=(wayland-protocols)
src=(https://wayland.freedesktop.org/releases/$pkg-$ver.tar.xz)
sha=(cde1d55e8dd70c3cbb3d1ec72f60e60000041579caa1d6a262bd9c35e93723a5)

build() {
    ./configure --prefix=/usr \
                --enable-libinput-backend \
                --enable-demo-clients-install
    make
}

package() {
    make DESTDIR=$pkgdir install

    chmod +s $pkgdir/usr/bin/weston-launch

    install -m 755 -D $rcsdir/weston.sh $pkgdir/etc/profile.d/weston.sh
}
