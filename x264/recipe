pkg=x264
ver=20160930-2245
rel=1
sum="CLI tools for encoding H264/AVC video streams"
lic=GPL
url=http://www.videolan.org/developers/x264.html
dep=(ffmpeg)
mkd=(yasm)
src=(http://download.videolan.org/pub/videolan/x264/snapshots/$pkg-snapshot-$ver-stable.tar.bz2)
sha=(56af2fbfb96bc2a3a75766898bde4f39708955383f005f0fbb60afc93c91d271)

build() {
    ./configure --prefix=/usr \
                --enable-shared \
                --enable-pic
    make
}

package() {
    make DESTDIR=$pkgdir install
}
