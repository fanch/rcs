pkg=x264
ver=20161227-2245
rel=1
sum="CLI tools for encoding H264/AVC video streams"
lic=GPL
url=http://www.videolan.org/developers/x264.html
dep=(ffmpeg)
mkd=(yasm)
src=(http://download.videolan.org/pub/videolan/x264/snapshots/$pkg-snapshot-$ver-stable.tar.bz2)
sha=(7bc12921b6b97ab9f498547d82a4d4257a3ba80620b93bade5e2e719a68fd946)

build() {
    ./configure --prefix=/usr \
                --enable-shared \
                --enable-pic
    make
}

package() {
    make DESTDIR=$pkgdir install
}
