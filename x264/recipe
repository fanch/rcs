pkg=x264
ver=20170202-2245
rel=1
sum="CLI tools for encoding H264/AVC video streams"
lic=GPL
url=http://www.videolan.org/developers/x264.html
dep=(ffmpeg)
mkd=(yasm)
src=(http://download.videolan.org/pub/videolan/x264/snapshots/$pkg-snapshot-$ver-stable.tar.bz2)
sha=(d57df818f1a98e63404929d8fa94ddaac863263025029a61c121bfb1daf8207c)

build() {
    ./configure --prefix=/usr \
                --enable-shared \
                --enable-pic
    make
}

package() {
    make DESTDIR=$pkgdir install
}
