pkg=gegl
ver=0.3.14
rel=1
sum="Graph based image processing framework"
lic="GPL3, LGPL3"
url=http://www.gegl.org
dep=(babl libraw json-glib)
mkd=(librsvg intltool ffmpeg lua exiv2 ruby)
src=(http://download.gimp.org/pub/$pkg/0.3/$pkg-$ver.tar.bz2)
sha=(09f5e2e6899697641d4660e3e274aed696f5bacc96ba389ac77674ee1156590a)

build() {
    ./configure --prefix=/usr \
                --disable-docs \
                --with-librsvg
    make
}

package() {
    make DESTDIR=$pkgdir install
}
