pkg=libevdev
ver=1.5.1
rel=1
sum="Wrapper library for evdev devices"
lic=custom:X11
url=http://www.freedesktop.org/wiki/Software/libevdev
mkd=(valgrind)
src=(http://freedesktop.org/software/$pkg/$pkg-$ver.tar.xz)
sha=(17630821a57e6e3f02e01ade836f24068df9bd530067091152b0d468c3a86f40)

build() {
    ./configure --prefix=/usr \
                --disable-static
    make
}

package() {
    make DESTDIR=$pkgdir install

    install -Dm644 COPYING $pkgdir/usr/share/licenses/$pkg/COPYING
}
