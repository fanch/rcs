pkg=libraw
ver=0.18.0
rel=1
sum="A library for reading RAW files obtained from digital photo cameras (CRW/CR2, NEF, RAF, DNG, and others)"
lic="CDDL, LGPL"
url=http://www.libraw.org
dep=(lcms2 jasper)
src=(http://www.libraw.org/data/LibRaw-$ver.tar.gz)
sha=(d56a0c9a0e6d1b8c8c5585346acf2cfb0554eee0f0948da66f580cd65c8c5c9b)

build() {
    ./configure --prefix=/usr \
                --disable-examples
    make
}

package() {
    make DESTDIR=$pkgdir install
}
