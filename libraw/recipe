pkg=libraw
ver=0.18
rel=1
sum="A library for reading RAW files obtained from digital photo cameras (CRW/CR2, NEF, RAF, DNG, and others)"
lic="CDDL, LGPL"
url=http://www.libraw.org
dep=(lcms2 jasper)
src=(http://www.libraw.org/data/LibRaw-$ver.tar.gz)
sha=(fd331b6cce6b4af5e1e766d29a31ea08b2417acfad3b4bd72cbb8b76c68110fc)

build() {
    ./configure --prefix=/usr \
                --disable-examples
    make
}

package() {
    make DESTDIR=$pkgdir install
}
