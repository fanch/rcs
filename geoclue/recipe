pkg=geoclue
ver=2.5.2
rel=1
sum="Modular geoinformation service built on the D-Bus messaging system"
lic=LGPL
url=http://geoclue.freedesktop.org
dep=(json-glib libsoup modemmanager networkmanager)
mkd=(intltool)
src=( https://gitlab.freedesktop.org/geoclue/geoclue/-/archive/$ver/$pkg-$ver.tar.xz)
sha=(ada9dba870dd79e1b21923aeda4d82b66cbda39e57978fbe3d83d356cc3c605e)

build() {
mkdir build 
cd    build 
meson --prefix=/usr \
	  -Dgtk-doc=false ..
ninja  -j1
}

package() {
DESTDIR=$pkgdir ninja install -C build
}
