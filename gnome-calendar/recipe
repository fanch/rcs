pkg=gnome-calendar
ver=3.22.3
rel=1
sum="Simple and beautiful calendar application designed to perfectly fit the GNOME desktop"
lic=GPL
url=http://gnome.org
grp=gnome-extra
dep=(evolution-data-server desktop-file-utils)
mkd=(intltool)
src=(https://download.gnome.org/sources/$pkg/${ver:0:4}/$pkg-$ver.tar.xz)
sha=(75f95e9cd1961f943cab077db2c1a39e7125e5fe94ec7cad55e7814fcf2b6737)

build() {
    ./configure --prefix=/usr
    make
}

package() {
    make DESTDIR=$pkgdir install
}
