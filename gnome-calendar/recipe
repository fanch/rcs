pkg=gnome-calendar
ver=3.22.1
rel=1
sum="Simple and beautiful calendar application designed to perfectly fit the GNOME desktop"
lic=GPL
url=http://gnome.org
grp=gnome-extra
dep=(evolution-data-server desktop-file-utils)
mkd=(intltool)
src=(https://download.gnome.org/sources/$pkg/${ver:0:4}/$pkg-$ver.tar.xz)
sha=(e6a3670c63122c4b37fbe243a54486e019c1bfd9a27c709234fb81b9e0c13360)

build() {
    ./configure --prefix=/usr
    make
}

package() {
    make DESTDIR=$pkgdir install
}
