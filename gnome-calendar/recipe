pkg=gnome-calendar
ver=3.22.2
rel=1
sum="Simple and beautiful calendar application designed to perfectly fit the GNOME desktop"
lic=GPL
url=http://gnome.org
grp=gnome-extra
dep=(evolution-data-server desktop-file-utils)
mkd=(intltool)
src=(https://download.gnome.org/sources/$pkg/${ver:0:4}/$pkg-$ver.tar.xz)
sha=(3096278eb4ccfee326262808451111236023bba8e0c9d332c319fb05cfdc910f)

build() {
    ./configure --prefix=/usr
    make
}

package() {
    make DESTDIR=$pkgdir install
}
