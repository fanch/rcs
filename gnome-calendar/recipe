pkg=gnome-calendar
ver=3.24.0
rel=1
sum="Simple and beautiful calendar application designed to perfectly fit the GNOME desktop"
lic=GPL
url=http://gnome.org
grp=gnome-extra
dep=(evolution-data-server desktop-file-utils)
mkd=(intltool)
src=(https://download.gnome.org/sources/$pkg/${ver:0:4}/$pkg-$ver.tar.xz)
sha=(8a21f51e10ce491e4a492e21c47de29a9ba1b568f4e2fd6f4e33616609d413d0)

build() {
    ./configure --prefix=/usr
    make
}

package() {
    make DESTDIR=$pkgdir install
}
