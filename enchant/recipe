pkg=enchant
ver=1.6.1
rel=1
sum="A wrapper library for generic spell checking"
lic=LGPL
url=https://abiword.github.io/enchant
dep=(glib hunspell)
mkd=(autoconf-archive)
src=(git+https://github.com/AbiWord/enchant.git#commit=7c0ec26)

build() {
    NOCONFIGURE=1 ./autogen.sh

    ./configure --prefix=/usr \
                --disable-static \
                --disable-ispell \
                --disable-aspell \
                --disable-hspell \
                --disable-hunspell \
                --disable-myspell
    make
}

package() {
    make DESTDIR=$pkgdir install
}
