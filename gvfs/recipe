pkg=gvfs
ver=1.30.3
rel=1
sum="Virtual filesystem implementation for GIO"
lic=LGPL
url=http://www.gnome.org
grp=gnome
dep=(avahi dbus dconf libarchive libsoup udisks libsecret gnome-online-accounts systemd libgudev gcr fuse libbluray libmtp libgphoto2)
mkd=(gtk3 intltool)
src=(https://download.gnome.org/sources/$pkg/${ver:0:4}/$pkg-$ver.tar.xz)
sha=(b824a29489cae7f39e1a0fc0d154ac7b7bf43d8edd98ba83ffcad2f766d0f175)

build() {
    ./configure --prefix=/usr \
                --sysconfdir=/etc \
                --disable-static \
                --localstatedir=/var \
                --disable-obexftp
    make
}

package() {
    make DESTDIR=$pkgdir install
}
