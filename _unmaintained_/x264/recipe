pkg=x264
ver=20160401-2245
rel=1
sum="CLI tools for encoding H264/AVC video streams"
lic=GPL
url=http://www.videolan.org/developers/x264.html
dep=(ffmpeg)
mkd=(yasm)
src=(http://download.videolan.org/pub/videolan/x264/snapshots/$pkg-snapshot-$ver-stable.tar.bz2)
sha=(1e9a7b835e80313aade53a9b6ff353e099de3856bf5f30a4d8dfc91281f786f5)

build() {
    ./configure --prefix=/usr \
                --enable-shared \
                --enable-pic
    make
}

package() {
    make DESTDIR=$pkgdir install
}
