pkg=libxslt
ver=1.1.28
rel=1
sum="XML stylesheet transformation library"
lic=custom
url=http://xmlsoft.org/XSLT
dep=(libgcrypt libxml2)
src=(ftp://xmlsoft.org/libxslt/libxslt-$ver.tar.gz)
sha=(5fc7151a57b89c03d7b825df5a0fae0a8d5f05674c0e7cf2937ecec4d54a028c)

build() {
    ./configure --prefix=/usr \
                --disable-static
    make
}

package() {
    make DESTDIR=$pkgdir install

    install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkg}/LICENSE
}
