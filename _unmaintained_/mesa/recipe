pkg=mesa
ver=11.2.1
rel=1
sum="an open-source implementation of the OpenGL specification"
lic=custom
url=http://mesa3d.sourceforge.net
dep=(elfutils expat libdrm libomxil-bellagio libxdamage libxshmfence llvm systemd wayland libclc libgcrypt)
mkd=(libva libvdpau)
src=(ftp://ftp.freedesktop.org/pub/mesa/$ver/mesa-$ver.tar.xz)
sha=(a65207e9ae5c5f1c29f863c6a2cc98a7ab99762a24b82a248337f0ea9cfce01b)

build() {
    ./configure --prefix=/usr \
                --sysconfdir=/etc \
                --enable-dri \
                --enable-egl \
                --enable-gles1 \
                --enable-gles2 \
                --enable-vdpau \
                --enable-xa \
                --enable-gbm \
                --enable-osmesa \
                --enable-nine \
                --enable-omx \
                --enable-texture-float \
                --enable-llvm-shared-libs \
                --enable-gallium-llvm \
                --enable-shared-glapi \
                --enable-glx \
                --enable-glx-tls \
                --enable-opencl \
                --enable-opencl-icd \
                --with-sha1=libgcrypt \
                --with-egl-platforms=x11,drm,wayland \
                --with-dri-drivers=i915,i965,r200,radeon,nouveau,swrast \
                --with-gallium-drivers=r300,r600,radeonsi,nouveau,svga,swrast,virgl \
                --with-dri-driverdir=/usr/lib/xorg/modules/dri
    make
}

package() {
    make DESTDIR=$pkgdir install

    install -m755 -d $pkgdir/usr/lib/xorg/modules/extensions
    ln -s libglx.xorg $pkgdir/usr/lib/xorg/modules/extensions/libglx.so

    install -m644 $rcsdir/LICENSE $pkgdir/usr/share/licenses/$pkg/LICENSE
}
