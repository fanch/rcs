pkg=hwloc
ver=1.11.2
rel=1
sum="Portable Hardware Locality is a portable abstraction of hierarchical architectures"
lic=BSD
url=http://www.open-mpi.org/projects/hwloc
dep=(bash pciutils cairo libxml2)
src=(http://www.open-mpi.org/software/$pkg/v${ver%.*}/downloads/$pkg-$ver.tar.bz2)
sha=(8c029b6b1638245837707bfa6c865f448af4e49e7d352335e019d818b51fecf8)

build() {
    ./configure --prefix=/usr \
                --sbindir=/usr/bin
    make
}

package() {
    make DESTDIR=$pkgdir install
}
