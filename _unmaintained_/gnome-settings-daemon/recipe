pkg=gnome-settings-daemon
ver=3.20.1
rel=1
sum="The GNOME Settings daemon"
lic=GPL
url=http://www.gnome.org
grp=gnome
dep=(dconf geoclue geocode-glib gnome-desktop gsettings-desktop-schemas libcanberra libgweather libnotify librsvg nss pulseaudio pulseaudio-alsa systemd upower libgudev libwacom xorg-wacom)
opt=(!emptydirs)
src=(https://download.gnome.org/sources/$pkg/${ver:0:4}/$pkg-$ver.tar.xz)
sha=(e84a075d895ca3baeefb8508e0a901027b66f7d5a7ee8c966e31d301b38e78e7)

build() {
    ./configure --prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
    make
}

package() {
    make DESTDIR=$pkgdir install
}
