pkg=xi-core
ver=0.2.0-20170820
rel=1
sum="A modern editor with a backend written in Rust."
lic=Apache
url=https://github.com/google/xi-editor
src=(git+https://github.com/google/xi-editor.git)

build() {
    cargo build --release
}

package() {
    install -Dm755 target/release/xi-core $pkgdir/usr/bin/xi-core
}
