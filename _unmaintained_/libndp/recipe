pkg=libndp
ver=1.5
rel=1
sum="Library for Neighbor Discovery Protocol"
lic=LGPL2.1
url=http://libndp.org
src=(http://libndp.org/files/libndp-$ver.tar.gz)
sha=(faf116ab70ce9514ec4e8573556025debea08f606e7f38b616de1f26e120c795)

build() {
    ./configure --prefix=/usr \
                --disable-static
    make
}

package() {
    make DESTDIR=$pkgdir install
}
