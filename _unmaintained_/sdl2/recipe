pkg=sdl2
ver=2.0.4
rel=1
sum="A library for portable low-level access to a video framebuffer, audio output, mouse, and keyboard"
lic=MIT
url=http://www.libsdl.org
dep=(libxext libxrender libx11 mesa libxcursor)
mkd=(alsa-lib pulseaudio libxrandr libxinerama wayland libxkbcommon)
src=(http://www.libsdl.org/tmp/release/SDL2-${ver}.tar.gz)
sha=(26c6aea8e1c7c60f4bed11d9b39630a878576a09a722ea67755b4fb7a0694af7)

build() {
    mkdir $srcdir/build; cd $srcdir/build

    ../$pkg-$ver/configure --prefix=/usr \
                           --enable-sdl-dlopen \
                           --disable-arts \
                           --disable-esd \
                           --disable-nas \
                           --enable-alsa \
                           --enable-pulseaudio-shared \
                           --enable-video-wayland \
                           --disable-rpath
    make
}

package() {
    cd $srcdir/build

    make DESTDIR=$pkgdir install
}
